<h1>Editing Book</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= form_for(@book) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :title %>
	  <%= f.text_field :title, class: 'form-control' %>

	  <%= f.label :publisher %>
	  <%= f.text_field :publisher, class: 'form-control' %>

	  
	  	<%= f.fields_for :authors do |a|%>
	  		<%= a.label :author %>
	  		<%= a.text_field :name, class: 'form-control' %>
	  	<%end%>

	  <%= submit_tag "Add Author", :type => 'button', :id => 'addAuthor', 
	          :onclick => 'addAuthorField()' %> 
	   
	 
	  <div id="authorHeader" style="display:none">Author:  </div>
	   
	 
	  <ul id="myList">
	  </ul>

	  <%= f.label :ISBN %>
	  <%= f.text_field :ISBN, class: 'form-control' %>

	  <%= f.label :publish_date %>
	  <%= f.datetime_select :publish_date, class: 'form-control' %>

	  <%= f.submit "Save changes", class: "btn btn-primary" %>
	<% end %>
  </div>
</div>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>
